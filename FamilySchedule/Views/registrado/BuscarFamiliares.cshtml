@model FamilySchedule.Models.Usuario

<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<title>@ViewData["Title"] - FSchedule</title>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/FamilySchedule.styles.css" asp-append-version="true" />

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


<body>

    <nav class="navbar navbar-expand-lg bg-dark" data-bs-theme="dark">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="registrado" asp-action="IndexRegistrado"><i class="fa-regular fa-address-card homeTitle"></i>Family Schedule</a>

            <form class="d-flex">
                <input class="form-control me-sm-2" type="search" placeholder="Search">
                <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
            </form>
        </div>
        </div>
    </nav>

    <!--Add family member-->

    <form class="formContainer" asp-action="MainUser" method="post">

        <h1>FamilySchedule</h1>
        <h2>Agrega miembros a tu familia</h2>

        <div class="inpContainer">

            <input type="email" name="correoUsuarioInvitado" class="inp form-control" placeholder="Correo" aria-label="" aria-describedby="basic-addon2">
           
            <button type="submit" class="btnSubmit btn btn-primary">Enviar invitacion</button>
        </div>
    </form>

    <!-- sweetAlert-->
    @if (TempData["AlertMessage"] != null)
    {
        <script>
            Swal.fire({
                title: 'Invitacion enviada correctamente!',
                text: '@TempData["AlertMessage"]',
                icon: 'success'
            });
        </script>
    }

    @if (TempData["noNull"] != null)
    {
        <script>
            Swal.fire({
                position: "top-end",
                icon: "info",
                text: '@TempData["noNull"]',
                showConfirmButton: false,
                timer: 3500
            });
        </script>
    }
    @if (TempData["agrupado"] != null)
    {
        <script>
            Swal.fire({
                position: "top-end",
                icon: "info",
                text: '@TempData["agrupado"]',
                showConfirmButton: false,
                timer: 3500
            });
        </script>
    }
    @if (TempData["InvitacionFallida"] != null)
    {
        <script>
            Swal.fire({
                title: "AVISO!",
                text: "@TempData["InvitacionFallida"]",
                icon: "warning",
                confirmButtonText: 'OK D:'
            });
        </script>
    }
    @if (TempData["errorInvitacion"] != null)
    {
        <script>
            Swal.fire({
                title: "ERROR!",
                text: "@TempData["ErrorInvitacion"]",
                icon: "error",
                confirmButtonText: 'OK D:'
            });
        </script>
    }
    @if (TempData["MismoCorreo"] != null)
    {
        <script>
    Swal.fire({
    position: "top-end",
    icon: "error",
    title: "@TempData["MismoCorreo"]",
    showConfirmButton: false,
    timer: 2500
        });
      </script>
    }
    
    <!-- #endregion -->
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }


    <link rel="stylesheet" href="~/css/buscarFamiliares.css" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

</body>
</html>

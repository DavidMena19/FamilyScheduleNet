@model IEnumerable<FamilySchedule.Models.Usuario>

    @{
        ViewData["Title"] = "Iniciar Seccion";
    }


<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <!--Header Nav-->

<nav class="navbar navbar-expand-lg bg-dark" data-bs-theme="dark">
    <div class="container-fluid">
        <a class="navbar-brand" asp-area="" asp-controller="Evento" asp-action="Index"><i class="fa-regular fa-address-card homeTitle"></i>Family Schedule</a>
    </div>
</nav>

    <form class="formContainer" method="post" action="@Url.Action("IniciarSeccion","Usuario")">

<div class="inpContainer">

    <input type="email" name="correo" class="inp form-control" placeholder="Correo" aria-label="" aria-describedby="basic-addon2">  
    <input type="password" name="clave" class="inpDown form-control" placeholder="Contraseña" aria-label="" aria-describedby="basic-addon2">
    
    <button type="submit" class="btnSubmit btn btn-primary">Iniciar Seccion</button>

    <p>no tengo una cuenta <a asp-area="" asp-controller="Usuario" asp-action="RegistrarUsuario">Crear Cuenta</a></p>

</form>

<!--Script-->
@if (TempData["errorUsuario"] != null)
{
    <script>
        Swal.fire({
            title: "ERROR!",
            text: "@TempData["errorUsuario"]",
            icon: "error",
            confirmButtonText: 'Aceptar'
        });
    </script>
}
@if (TempData["Login"] != null)
{
    <script>
        Swal.fire({
            title:"Logeado!"
            icon: "success",
            text: '@TempData["Login"]',
            ConfirmButtonText:'Aceptar' ,
            
        });
    </script>
}
<!-- Create User Form-->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


<link rel="stylesheet" href="~/css/IniciarSeccion.css" />
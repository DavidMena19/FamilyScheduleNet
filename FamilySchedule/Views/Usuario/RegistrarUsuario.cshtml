@model FamilySchedule.Models.Usuario

<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<title>@ViewData["Title"] - FSchedule</title>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/FamilySchedule.styles.css" asp-append-version="true" />

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


<body>



    <!-- Create User Form-->

    <form class="formContainer" asp-action="CrearUsuario" method="post">

        <h1>FamilySchedule</h1>
        <h2>Registro de usuario</h2>
        <div class="inpContainer">

            <input type="text" name="Nombre"    class="inp form-control" placeholder="Nombre" aria-label="" aria-describedby="basic-addon2">
            <input type="text" name="Apellido"  class="inp form-control" placeholder="Apellido" aria-label="" aria-describedby="basic-addon2">            
            <input type="email"name="Correo"    class="inp form-control" placeholder="Correo" aria-label="" aria-describedby="basic-addon2">          
            <input type="text" name="NombreDeUsuario" class="inp form-control" placeholder="Nombre de usuario" aria-label="" aria-describedby="basic-addon2">          
            <input type="text" name="Contraseña" class="inp form-control" placeholder="Contraseña" aria-label="" aria-describedby="basic-addon2">    
            <input type="text" name="ConfirmarContraseña"class="inp form-control" placeholder="Repita la contraseña" aria-label="" aria-describedby="basic-addon2">
            
            <button type="submit" class="btnSubmit btn btn-primary">Registrarme</button>
        </div>
    </form>

    <!-- sweetAlert-->

    @if (TempData["AlertMessage"] != null)
    {
        <script>
            Swal.fire({
                title: 'Éxito!',
                text: '@TempData["AlertMessage"]',
                icon: 'success'
            });
        </script>
    }

    @if (TempData["CorreoExistente"] != null)
    {
        <script>
            Swal.fire({
                position: "top-end",
                icon: "error",
                text: '@TempData["CorreoExistente"]',
                showConfirmButton: false,
                timer: 3500
            });
        </script>
    }
    @if (TempData["noNull"] != null)
    {
        <script>
            Swal.fire({
                position: "top-end",
                icon: "info",
                text: '@TempData["noNull"]',
                showConfirmButton: false,
                timer: 3500
            });
        </script>
    }
        @if (TempData["ContraseñaIncorrecta"] != null)
        {
            <script>
                Swal.fire({
                    position: "top-end",
                    icon: "error",
                    text: '@TempData["ContraseñaIncorrecta"]',
                    showConfirmButton: false,
                    timer: 3500
                });
            </script>
    }

<!-- #endregion -->

    
     
   
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }


    <link rel="stylesheet" href="~/css/registrarUsuario.css" /> 
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

</body>
</html>
